# LKC Catering System - Environment Variables Template
# Copy this file to .env and fill in your values

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:your_password@postgres:5432/catering
POSTGRES_DB=catering
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# ==============================================================================
# REDIS (Message Broker for Celery)
# ==============================================================================
REDIS_URL=redis://redis:6379/0

# ==============================================================================
# APPLICATION
# ==============================================================================
APP_ENV=production
DEBUG=false
SECRET_KEY=generate_with_python_secrets_token_urlsafe_32

# ==============================================================================
# FRONTEND
# ==============================================================================
NEXT_PUBLIC_API_URL=https://lkc.norskmatlevering.no/api
FRONTEND_URL=https://lkc.norskmatlevering.no

# ==============================================================================
# SMTP (Email Sending for Workflows)
# ==============================================================================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=noreply@lkc.no
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@lkc.no
SMTP_FROM_NAME=Larvik Kommune Catering
SMTP_USE_TLS=true

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://lkc.norskmatlevering.no/api/auth/callback/google

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# WORKFLOW MONITORING (Flower)
# ==============================================================================
FLOWER_PASSWORD=your_secure_flower_password

# ==============================================================================
# AI SERVICES (Optional)
# ==============================================================================
AI_PROVIDER=openai
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo

# Anthropic (Claude)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# ==============================================================================
# INTEGRATIONS
# ==============================================================================
# Matinfo API (Norwegian food database)
MATINFO_API_KEY=
MATINFO_API_URL=https://api.matinfo.no/v2

# GitHub (for issue tracking from app)
GITHUB_TOKEN=
GITHUB_REPO_BACKEND=isyvertsen/easycatering
GITHUB_REPO_FRONTEND=isyvertsen/easycatering

# ==============================================================================
# SECURITY
# ==============================================================================
ALLOWED_HOSTS=*
CORS_ORIGINS=https://lkc.norskmatlevering.no

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
DATABASE_ECHO=false
LOG_LEVEL=INFO
