# Environment Configuration Example
# Copy this file to .env and update with your actual values
#
# SECURITY WARNINGS:
# 1. NEVER commit .env file to version control
# 2. Use strong, randomly generated values for all secrets
# 3. In production, use a secrets manager (e.g., HashiCorp Vault, AWS Secrets Manager)
# 4. Rotate all credentials if they are ever exposed
# 5. Never enable AUTH_BYPASS in production

# Security
SECRET_KEY=your-secret-key-here-generate-with-python-secrets-module
AUTH_BYPASS=false

# Database
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Application
APP_NAME="Larvik Kommune Catering System"
APP_VERSION="1.0.0"
APP_ENV=development
DEBUG=false
TESTING=false

# CORS
CORS_ORIGINS=["http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=true

# API
API_V1_STR="/api/v1"
API_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# JWT
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
MAX_UPLOAD_SIZE=10485760

# Export Settings
EXPORT_PATH=./exportcatalog
EXPORT_BATCH_SIZE=100

# Redis (optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Matinfo API (for product data sync)
MATINFO_API_KEY=your-matinfo-api-key-here
MATINFO_API_URL=https://api.matinfo.no/v2

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@larvikkommune.no
EMAILS_FROM_NAME="Larvik Kommune Catering"

# Google OAuth (when implemented)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/callback

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false

# Cron job API key (for automated tasks like log cleanup)
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
CRON_API_KEY=